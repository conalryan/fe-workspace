{
  "name": "lit-01-introduction",
  "license": "MIT",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "analyze": "cem analyze --litelement",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "dev": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"web-dev-server\"",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open"
  },
  "dependencies": {
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@web/dev-server": "^0.4.6",
    "@web/rollup-plugin-html": "^2.3.0",
    "@web/rollup-plugin-import-meta-assets": "^2.2.1",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "conalryan-eslint-config": "workspace:*",
    "concurrently": "^8.2.2",
    "deepmerge": "^4.3.1",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.9",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-workbox": "^8.1.0",
    "rollup": "^4.18.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "customElements": "custom-elements.json"
}